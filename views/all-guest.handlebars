<h1>View All Guests</h1>
{{#each guest}}
  <div class="ui divided items">
    <div class="item">
        <div class="content">
            <a class="header">{{fullname}}</a>
            <div class="meta">
              <span class="cinema">{{email}}</span>
            </div>
            <div class="description">
              <p>{{comment}}</p>
            </div>
            <div class="extra">
              <a href="/edit/{{id}}">
                <button class="mini ui button">Edit</button>
              </a>
              <div class="ui right floated delete negative button">
                Delete Entry<i class="right trash outline icon"></i>
              </div>
            </div>
        </div>
    </div>
  </div>
  {{else}}
<p>No Guest Found</p>
{{/each}}
  		<div class="ui small modal">
		    <div class="header">
		      Delete This Entry
		    </div>
		    <div class="content">
		      <p>Are you sure you want to delete this entry?</p>
		    </div>
		    <div class="actions">
          <form action="/guest/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="ui negative button">No</div>
            <input type="submit" value="Yes" class="ui positive right labeled icon button">
          {{!-- <div >
		      <i class="checkmark icon"></i>
		      </div> --}}
          </form>

		    </div>
		  </div>
